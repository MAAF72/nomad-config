[Unit]
Description=Server start hook
Wants=network-online.target
After=network-online.target

[Service]
Type=simple
User=root
Group=root
WorkingDirectory=/home/nomad-workspace
ExecStart=python3 /home/nomad-workspace/server-start-hook.py --endpoint ||ENDPOINT||
Restart=on-failure
RestartSec=10
KillMode=process

[Install]
WantedBy=multi-user.target